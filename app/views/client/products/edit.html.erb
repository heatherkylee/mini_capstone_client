<p>Edit and existing product's information</p>

<%= form_tag "/client/products/#{@product['id']}", method: :patch do %>
  <div>
    Product Name: <input type="text" name="input_name" value="<%= @product['name'] %>">
  </div> 
   <div>
    Product Price: <input type="text" name="input_price" value="<%= @product['price'] %>">
  </div> 
  <div>
    Supplier: <input type="text" name="supplier_id" value="<%= @product['supplier']['name'] %>">
  </div>  
  <div>
    Product Description: <input type="text" name="input_description" value="<%= @product['description'] %>">
  </div>  
  <div>
    Product Image: <input type="text" name="input_image" value="<%= @product['image'] %>">
  </div>
  <input type="submit" value="Update Product">
<% end %>

<p><a href="/client/products/<%= @product['id'] %>" data-method="delete">Delete Product</a></p>
