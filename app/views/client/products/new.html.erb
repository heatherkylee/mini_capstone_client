<%= form_tag "/client/products", method: :post do %>
  <div>
    Product Name: <input type="text" name="input_name">
  </div> 
   <div>
    Product Price: <input type="text" name="input_price">
  </div>  
  <div>
    Product Description: <input type="text" name="input_description">
  </div>  
  <div>
    Product Image: <input type="text" name="input_image">
  </div>
  <input type="submit" value="Submit Product">
<% end %>
<a href="http://localhost:3001/client/products/">Back to view all products</a>