<!DOCTYPE html>
<html>
  <head>
    <title>MiniCapstoneClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p><%= @jwt %></p>
    <p><a href="http://localhost:3001/client/products/">Home</a>
    <a href="/client/signup">Sign Up</a>
    <a href="/client/login">Log In</a>
    <a href="/client/logout" data-method="delete">Log Out</a></p>
    <p><a href="/client/products?category=main">Main</a>
    <a href="/client/products?category=side">Sides</a>
    <a href="/client/products?category=dessert">Desserts</a>
    <a href="/client/products?category=drink">Drinks</a>
    <a href="/client/carted_products">Items in Your Cart</a></p>
    <% flash.each do |name, message| %>
      <%= message %>
    <% end %>
    <%= yield %>
  </body>
</html>
